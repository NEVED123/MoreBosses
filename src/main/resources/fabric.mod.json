{
  "schemaVersion": 1,
  "id": "more_bosses",
  "version": "${version}",

  "name": "MoreBosses",
  "description": "Minecraft Mod which aims to add more bosses, to make those bosses more difficult to find/kill, and get more reward from killing them",
  "authors": [
    "Deven Mallamo"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "CC0-1.0",
  "icon": "assets/more_bosses/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.fabricmc.more_bosses.MoreBosses"
    ],
    "client": [
      "net.fabricmc.more_bosses.MoreBossesClient"
    ]
  },
  "mixins": [
    "more_bosses.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": "~1.18.2",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
